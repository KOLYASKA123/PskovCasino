<Application x:Class="PskovCasino.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PskovCasino"
             xmlns:viewModel="clr-namespace:PskovCasino.MVVM.ViewModel"
             xmlns:view="clr-namespace:PskovCasino.MVVM.View"
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:RegistrationViewModel}">
            <view:RegistrationView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
            <view:LoginView />
        </DataTemplate>
    </Application.Resources>
</Application>
